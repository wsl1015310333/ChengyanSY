<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout


        android:orientation="vertical"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_width="363dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车主姓名 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView

                android:textColor="#353535"
                android:textSize="14dp"
                android:text="杨建英"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acapInfo_name" />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 证件类型 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acapInfo_numType"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="居民身份证（A) "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件号码 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acapInfo_num"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="371122199610145336"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="13dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆号码 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acapInfo_carNum"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="SFM7145ATA "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆类型 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acapInfo_carType"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="小型轿车（K33）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号码 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView

                android:id="@+id/acapInfo_plate"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="鲁B330Y3 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号牌种类 : "
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acapInfo_plateType"
                android:textColor="#353535"
                android:textSize="14dp"
                android:text="小型汽车品牌（02） "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>