<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_gravity="center"
    android:id="@+id/sp_takePhoto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="20dp"

        android:background="@drawable/photograph"
        android:layout_width="165dp"
        android:layout_height="161dp" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:textColor="#1976D2"
        android:text="点击拍照"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
    android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/line"
            android:layout_width="108dp"
            android:layout_height="1px" />
        <LinearLayout
android:id="@+id/sp_arrow_linearLayout"
            android:layout_marginLeft="15dp"
            android:background="@drawable/xuxian"
            android:layout_width="114dp"
            android:layout_height="21dp" >
            <TextView
                android:layout_gravity="center"
                 android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:textColor="#353535"
                android:text="证件号码查询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/sp_arrow"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:background="@drawable/r_arrow"
                android:layout_width="6dp"
                android:layout_height="5dp" />
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:background="@drawable/line"
            android:layout_width="108dp"
            android:layout_height="1px" />
    </LinearLayout>
<searchproject.php.yisa.chengyansy.view.ExpandLayout
    android:id="@+id/mContainerDes"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/lin_Editext"
        android:elevation="2dp"
        android:layout_marginLeft="8dp"
        android:background="#fff"
        android:layout_width="345dp"
        android:layout_height="62dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
           >

            <android.support.design.widget.TextInputEditText
                android:textSize="14dp"
                android:id="@+id/et_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:inputType="number"
                android:hint="请输入身份证号"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/lin_Editext"

        android:layout_marginTop="16dp"
        android:background="#1976D2"
        android:textColor="#FFF"
        android:text="查  询"
        android:textSize="16dp"
        android:layout_width="345dp"
        android:layout_height="49dp"
        android:id="@+id/button_query" />

</searchproject.php.yisa.chengyansy.view.ExpandLayout>
</LinearLayout>