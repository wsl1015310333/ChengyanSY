<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/lineae"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView

    android:textSize="14dp"
    android:layout_marginTop="5dp"
    android:id="@+id/kakou_title"
    android:textColor="#353535"
    android:layout_marginLeft="16dp"
    android:text="大众-途观-2014;2015"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="8dp"
android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
android:background="@drawable/cri_numbertext"
        android:id="@+id/kakou_count"
         android:textColor="#fff"


        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="12222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_below="@+id/kakou_title"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </RelativeLayout>
</LinearLayout>