<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:translationZ="1dp"
    android:background="#ffffff"
    android:elevation="1dp"
    android:layout_marginTop="8dp"

    >
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="14dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#999999"
            android:textSize="14dp"
            android:text="违章类型 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#353535"
            android:textSize="14dp"
            android:id="@+id/carpp_type"
            android:text="机动车违反禁止停车标志指示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14dp"
            android:textColor="#999999"
            android:text="违章地点 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:textColor="#353535"
            android:id="@+id/carpp_place"
            android:text="京东大厦前进一路"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#999999"
            android:textSize="14dp"
            android:text="违章金额 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:textColor="#353535"
            android:id="@+id/carpp_price"
            android:text="200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="60dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:text="违法记分数 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:textColor="#353535"
            android:id="@+id/carpp_numb"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#999999"
            android:textSize="14dp"
            android:text="当 事 人   ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:textColor="#353535"
            android:id="@+id/carpp_manager"
            android:text="孙波"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#999999"
            android:textSize="14dp"
            android:text="违章时间 ："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14dp"
            android:textColor="#353535"
            android:id="@+id/carpp_time"
            android:text="2017/11/22 12:22:11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"></LinearLayout>
</LinearLayout>
</LinearLayout>