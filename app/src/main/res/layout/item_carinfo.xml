<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="11dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/car_image_url"
        android:layout_marginLeft="19dp"
        android:background="#ffffff"
        android:layout_width="108dp"
        android:layout_height="74dp" />
    <LinearLayout
android:layout_marginTop="1dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#999999"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌 ："
        />
    <TextView
        android:id="@+id/carinfo_plate"
        android:textColor="#353535"
        android:textSize="12dp"
        android:text="鲁BA249"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:background="@drawable/dang"
            android:id="@+id/carinfo_acap"


            android:layout_width="15dp"
            android:layout_height="15dp" />
    </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型 ："
                />
            <TextView
                android:id="@+id/carinfo_model"
                android:textColor="#353535"
                android:textSize="12dp"
                android:text="大众 - 途观 - 2014"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置 ："
                />
            <TextView
                android:id="@+id/carinfo_locationName"
                android:textColor="#353535"
                android:textSize="12dp"
                android:text="新兴街正阳路路口"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间 ："
                />
            <TextView
                android:id="@+id/carinfo_captureTime"
                android:textColor="#353535"
                android:textSize="12dp"
                android:text="2017 - 06 - 21  21 : 59 : 07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EEEEEE"
        ></View>

</LinearLayout>